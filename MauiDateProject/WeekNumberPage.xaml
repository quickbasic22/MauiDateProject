<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:globe="clr-namespace:System;assembly=netstandard"
             xmlns:local="clr-namespace:MauiDateProject"
             x:Class="MauiDateProject.WeekNumberPage"
             Title="Week Number Page">
    <VerticalStackLayout BindingContext="{Static globe:DateTime.Now}">
        <Label Text="{Binding DayOfWeek, StringFormat='Day Of Week {0}'}" FontSize="Large" TextColor="Lime" />
        <Label Text="{Binding DayOfYear, StringFormat='Day {0} of 2023'}" FontSize="Large" TextColor="Purple" />
        <Label Text="{Binding DayOfYear, Converter={local:IntConverter}, StringFormat='{0} days left of 2023'}" FontSize="Large" TextColor="Lime" />
        <Label FontSize="Large" TextColor="Purple">
            <Label.Text>
                <Binding
                     StringFormat="Week {0} in 2023">
                    <Binding.Source>
                        <local:WeekNumber />
                    </Binding.Source>
                </Binding>
            </Label.Text>
        </Label>
    </VerticalStackLayout>
</ContentPage>